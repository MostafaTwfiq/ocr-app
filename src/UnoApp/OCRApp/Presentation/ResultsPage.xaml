<Page
    x:Class="OCRApp.Presentation.ResultsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OCRApp.Presentation"
    xmlns:sys="using:System"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <FlipView ItemsSource="{x:Bind VM.Results}" x:Name="flipView" Background="Transparent" Grid.Row="0" Margin="15">
            <FlipView.ItemTemplate>
                <DataTemplate x:DataType="sys:String">
                    <Grid>
                        <TextBox AcceptsReturn="True" IsReadOnly="True" Text="{x:Bind}" />
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
        <Button Grid.Row="1" uen:Navigation.Request="-" Content="Go Back" />
    </Grid>
</Page>
